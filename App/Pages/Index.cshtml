@page
@model App.Pages.IndexModel
@{
}
<div class="container">
    <form asp-action="Login">
        <div class="logo">
            <img src="https://www.eicon.com.br/siss/nwassets/img/logo_topo.svg" class="img img-responsive img-circle center-block" />
        </div>
        <div class="form-group">
            <input asp-for="connectLogin.Username" class="form-control" placeholder="Username" />
            <span asp-validation-for="connectLogin.Username" class="text-danger"></span>
            <br />
            <input asp-for="connectLogin.Password" type="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="connectLogin.Password" class="text-danger"></span>
            <br />
            <select asp-for="TypeOfSystem" class="form-control">          
                <option value="2">Connect Work</option>
            </select>
            <br />
            <input type="submit" value="Login" class="btn btn-light form-control" />
        </div>
    </form>
</div>

